@model IEnumerable<WhatchaWatchin.Models.Medium>
@{
    ViewBag.Title = "SingleRate";
}

    <div class="row">
        <div class="col-md-4">
            <form action="AddSingleRateToDB">
                @foreach (var item in Model)
                    {
                            <h1>Please rate <br /> @item.Title)!</h1>
                            <input type="number" name="userRating" value="5" min="1" max="10" />
                            <input type="submit" name="Ratings" value="Submit" />
                            <br />
                            <img src="@item.Poster)" />
                            <div class="col-md-4">
                                <h2>Year: @item.Year)</h2>
                                <h2>Genre: @item.Genre)</h2>
                                <h4>Plot: @item.Title)<h4>
                            </div>
                    }
            </form>
        </div>
        </div>
