@{
	ViewBag.Title = "Home Page";


}
<div id="banner" class="row">
	<h1>Whatcha Watchin</h1>
</div>
<div class="container">
	<section id="home-page">
		
		<div id="input-row" class="row">
			<div id="search-div" class="col-md-5 input-group">
				<form action="@Url.Action("GetMovieToRate", "Media")">
					<p>Let's learn more about your movie taste. <br/>Type a movie in the searchbox that you want to rate!</p>
					<input id="movie-search" class="form-control input-lg" type="text" placeholder="Movie Title" name="movieToSearch" />
					<input id="submit-search" class="btn-lg btn btn-default" type="submit" />
				</form>
			</div>
			<div class="col-md-4 input-group">
				<form action="@Url.Action("TheAlgorithm", "ReviewedMedias")">
					<p>Do we have an idea of your movie taste?<br />Let us recommend a movie!</p> 
					<input id="recommend-btn" class="btn-lg btn btn-primary" type="submit" name="RecommendMovie" value="Recommend me a Movie!" />
				</form>
			</div>
		</div>
	</section>
</div>
<script>
	if ('@TempData["message"]' != '') {
		$.notify({
			message: '@TempData["message"]'
		}, {
			type: 'success'
		});
	}

</script>

